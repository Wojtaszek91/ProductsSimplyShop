@model SimplyProductShop.ViewModel.ProductListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista produktow</h2>

<table id="products" class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>Produkt</th>
            <th>Opis</th>
            <th>Czy dostepny ?</th>
            <th>Obraz</th>
            <th>Edytuj</th>
            <th>Usun</th>
        </tr>
    </thead>
    <tbody>
        </tbody>
</table>


@section Scripts
{
    <script>
        $(document).ready(function () {
            var productTable = $("#products").DataTable({
                ajax: {
                    url: "https://localhost:44368/api/products/",
                    dataSrc: ""                    
                },
                columns: [
                    {
                        data: "Name",
                        render: function (data,type , product) {
                            return "<a href='Details/" + product.Id + "'>" + data + "</a>"
                        }
                    },
                    {
                        data: "Description"
                    },
                    {
                        data: "IsAvaliable"
                    },
                    {
                        data: "Img"
                    },
                    {
                        render: function () {
                            return "<p>Edytuj</p>"
                        }
                    },
                    {
                        render: function (data,type , product) {
                            return "<button id='js-delete' data-product-id=" + product.Id + ">Usun</button>"                    
                        }
                    }

                ]
            });

        $(productTable).on("click", ".js-delete", function () {
            var button = $(this);
                bootbox.confirm("Are you sure you want to delete this product ?", function (result) {
                    if (result) {
            $.ajax({
                        url: "https://localhost:44368/api/products/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    })
                    }
                })
            })
        });
    </script>
}

