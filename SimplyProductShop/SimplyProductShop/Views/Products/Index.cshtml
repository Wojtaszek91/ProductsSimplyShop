@model SimplyProductShop.ViewModel.ProductListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista produktow</h2>
<table id="products" class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>Produkt</th>
            <th>Opis</th>
            <th>Czy dostepny ?</th>
            <th>Obraz</th>
            <th>Edytuj</th>
            <th>Usun</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.ProductList)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.IsAvaliable</td>
                <td>@product.Img</td>
                <td>
                    <button class="btn-link js-edit" data-product-id="@product.Id">Edytuj</button>
                </td>
                <td>
                    <button class="btn-link js-delete" data-product-id="@product.Id">Usun</button>
                </td>
            </tr>
    }
        </tbody>
</table>


@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#products").DataTable();
            $("#products").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this product ?", function (result) {
                    if (result) {
                    $.ajax({
                        url: "https://localhost:44368/api/products/" + button.attr("data-product-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    })
                    }
                })
            })
        });
    </script>
}

